[user]
	name = Xavier Sumba
	email = {{ .email }}
{{- if and .personal (not (or .work .gpu)) }}
	signingkey = {{ output "op" "item" "get" "ssh_mac" "--fields" "public key" }}
{{- else if .work }}
	signingkey = ~/.ssh/id_rsa
{{- end }}
[diff]
	algorithm = histogram
	renamelimit = 8192
	colorMoved = zebra
	renames = copies

[color]
	ui = auto

{{- if .work }}
[includeIf "gitdir:{{ .chezmoi.homeDir }}/Documents/code/github.hootops.com/xavier.sumba/"]
	path = {{ .chezmoi.homeDir }}/Documents/code/github.hootops.com/xavier.sumba/.gitconfig
{{- end }}

{{- if and .personal (not .work) }}
[includeIf "gitdir:{{ .chezmoi.homeDir }}/Documents/code/git.overleaf.com/"]
    path = {{ .chezmoi.homeDir }}/Documents/code/git.overleaf.com/.gitconfig
{{- end }}

[push]
	default = current

[merge]
	ff = only

[fetch]
	prune = true
  
[rebase]
	autosquash = true

[core]
	autocrlf = input

[rebase]
	autosquash = true

[commit]
	template = ~/.config/git/message
{{- if or .work (and .personal (not .gpu)) }}
	gpgsign = true
{{- end }}

[pretty]
	colored = format:%Cred%h%Creset %s %Cgreen(%cr) %C(bold blue)%an%Creset

[alias]
	aa = add --all
	ap = add --patch
	branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
	ci = commit -v
	co = checkout
	pf = push --force-with-lease
	st = status
	l = log --pretty=colored

{{- if or .work (and .personal (not .gpu)) }}
[gpg]
	format = ssh

[gpg "ssh"]
{{- if and .personal  (not (or .work .gpu)) }}
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
{{- else if .work }}
	program = ssh-keygen
{{- end }}
{{- end }}

