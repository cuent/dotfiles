# git
alias gnp="git --no-pager"

{{- if lookPath "bat" }}
alias cat=bat
{{- else if lookPath "batcat" }}
alias cat=batcat
{{- end }}
{{- if lookPath "fdfind" }}
alias fd=fdfind
{{- end }}
{{- if lookPath "eza" }}
alias ls=eza
{{- end }}

{{- if .gpu }}
# Aliases for GPU homes
{{- range $host, $data := .extra.gpuHome }}
{{-   if (stat $data.home) }}
alias gh-{{ $host }}={{ $data.home | quote }}
{{-   end }}
{{- end }}
{{- end }}

# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"

# Bundler
alias b="bundle"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

{{/* vim: set filetype=bash: */}}